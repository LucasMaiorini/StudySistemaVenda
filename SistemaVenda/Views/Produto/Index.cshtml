@{
    ViewData["Title"] = "Produtos";
}

@model List<SistemaVenda.Entidades.Produto>;

<h2>Clientes</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Qtd. Estoque</th>
            <th>Valor</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="linhaTabela" onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                <td> @item.Codigo</td>
                <td>@item.Descricao</td>
                <td>@item.Quantidade</td>
                <td>@item.Valor</td>
                <td>@item.Categoria.Descricao</td>
            </tr>
        }
    </tbody>
</table>
<br />

<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
    function Editar(codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\" + codigo;
    }

    function Cadastrar() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }
</script>